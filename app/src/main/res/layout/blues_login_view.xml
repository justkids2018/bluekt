<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/blues_login_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/blues_common_margin_30"
        android:layout_gravity="left"
        android:layout_marginLeft="2dp"
        android:hint="@string/blues_login_name" />

    <EditText
        android:id="@+id/blues_login_pwd"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blues_login_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="left"
        android:hint="@string/blues_login_pwd"
        android:layout_marginLeft="2dp" />

    <!---->
    <TextView
        android:id="@+id/blues_login_login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blues_login_pwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="完成" />

</RelativeLayout>